{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/public/index.html"
    },
    {
      "source": "/welcome",
      "destination": "/public/welcome.html"
    },
    {
      "source": "/dashboard", 
      "destination": "/public/hi-dashboard.html"
    },
    {
      "source": "/hi-island",
      "destination": "/public/hi-island-NEW.html"
    },
    {
      "source": "/hi-muscle",
      "destination": "/public/hi-muscle.html"
    },
    {
      "source": "/profile",
      "destination": "/public/profile.html"
    },
    {
      "source": "/(.*)",
      "destination": "/public/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
