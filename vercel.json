{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "X-Hi-Environment", "value": "production" },
        { "key": "X-Hi-Version", "value": "2.1.0" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  
  "rewrites": [
    { "source": "/welcome", "destination": "/welcome.html" },
    { "source": "/signin", "destination": "/signin.html" },
    { "source": "/signup", "destination": "/signup.html" },
    { "source": "/post-auth", "destination": "/post-auth.html" },
    { "source": "/profile", "destination": "/profile.html" },
    { "source": "/hi-island", "destination": "/hi-island-NEW.html" },
    { "source": "/hi-muscle", "destination": "/hi-muscle.html" },
    { "source": "/app", "destination": "/app.html" }
  ],
  
  "redirects": [
    {
      "source": "/hi-island.html", 
      "destination": "/hi-island",
      "permanent": true
    }
  ]
}