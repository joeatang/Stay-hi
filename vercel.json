{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  
  "headers": [
    {
      "source": "**/*.js",
      "headers": [
        { "key": "Content-Type", "value": "application/javascript; charset=utf-8" },
        { "key": "Cache-Control", "value": "public, max-age=3600" }
      ]
    },
    {
      "source": "**/*.css",
      "headers": [
        { "key": "Content-Type", "value": "text/css; charset=utf-8" },
        { "key": "Cache-Control", "value": "public, max-age=3600" }
      ]
    },
    {
      "source": "**/*.json",
      "headers": [
        { "key": "Content-Type", "value": "application/json; charset=utf-8" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "X-Hi-Environment", "value": "production" },
        { "key": "X-Hi-Version", "value": "2.1.0" }
      ]
    }
  ],
  
  "rewrites": [
    { "source": "/", "destination": "/public/welcome.html" },
    { "source": "/welcome", "destination": "/public/welcome.html" },
    { "source": "/signin", "destination": "/public/signin.html" },
    { "source": "/signup", "destination": "/public/signup.html" },
    { "source": "/hi-island", "destination": "/public/hi-island-NEW.html" },
    { "source": "/hi-muscle", "destination": "/public/hi-muscle.html" },
    { "source": "/hi-dashboard", "destination": "/public/hi-dashboard.html" }
  ],
  
  "redirects": [
    {
      "source": "/hi-island.html", 
      "destination": "/hi-island",
      "permanent": true
    }
  ]
}